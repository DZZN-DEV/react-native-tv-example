{
  "name": "@wouterds/react-native-tv-example",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "pods": "pod-install",
    "ios": "arch -x86_64 react-native run-ios",
    "ios:release": "arch -x86_64 react-native run-ios --configuration=Release",
    "ios:build:archive": "arch -x86_64 xcodebuild archive -workspace ios/ReactNativeTVExample.xcworkspace -scheme ReactNativeTVExample -configuration Release -destination generic/platform=iOS -archivePath ios/build/archive/ReactNativeTVExample.xcarchive",
    "ios:build:ipa": "arch -x86_64 xcodebuild -exportArchive -archivePath ios/build/archive/ReactNativeTVExample.xcarchive -exportPath ios/build -exportOptionsPlist ios/ExportOptions.plist",
    "ios:build:folder": "open ios/build",
    "ios:build": "yarn ios:build:archive && yarn ios:build:ipa && yarn ios:build:folder",
    "tvos": "arch -x86_64 react-native run-ios --scheme ReactNativeTVExample-tvos --simulator \"Apple TV\"",
    "android": "react-native run-android",
    "android:release": "react-native run-android --variant=release",
    "android:build:apk": "cd android && ./gradlew assembleRelease",
    "android:build:folder": "open android/app/build/outputs/apk/release/",
    "android:build": "yarn android:build:apk && yarn android:build:folder",
    "test": "jest",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "clean": "npx react-native-clean-project"
  },
  "dependencies": {
    "@react-native-community/hooks": "^2.8.1",
    "@react-native-masked-view/masked-view": "^0.2.7",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/native-stack": "^6.6.1",
    "@reduxjs/toolkit": "^1.8.1",
    "axios": "^0.26.1",
    "beautiful-react-hooks": "^1.2.0",
    "date-fns": "^2.28.0",
    "ms": "^2.1.3",
    "react": "17.0.2",
    "react-native": "npm:react-native-tvos@0.66.3-3",
    "react-native-config": "^1.4.5",
    "react-native-device-info": "^8.7.0",
    "react-native-fast-image": "^8.5.11",
    "react-native-linear-gradient": "^2.6.2",
    "react-native-safe-area-context": "^4.2.4",
    "react-native-screens": "^3.13.0",
    "react-redux": "^7.2.8",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^3.1.0",
    "@types/jest": "^26.0.23",
    "@types/ms": "^0.7.31",
    "@types/react-native": "^0.66.15",
    "@types/react-redux": "^7.1.23",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^7.14.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.3.7",
    "metro-react-native-babel-preset": "^0.66.2",
    "pod-install": "^0.1.38",
    "react-native-flipper": "^0.137.0",
    "react-test-renderer": "17.0.2",
    "redux-flipper": "^2.0.1",
    "typescript": "^3.5.5"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
